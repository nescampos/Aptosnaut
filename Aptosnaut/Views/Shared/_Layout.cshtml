<!DOCTYPE html>
<html lang="en">
<head>
    <title>Aptosnaut - @ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    @await RenderSectionAsync("Meta", required: false)
    <link rel="stylesheet" href="~/css/rubic.css">
    <link rel="stylesheet" href="~/css/aptosnaut.css" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <div id="page-wrapper">

        <!-- Header -->
        <div id="header-wrapper">
            <a class="image" href="@Url.Action("Index","Home")"><img src="~/images/cover-peerpay.png" style="width:200px;" class="img-fluid" alt="Aptosnaut" /></a>
            <div id="header" class="container">

                <!-- Logo -->
                <h1 id="logo"><a href="@Url.Action("Index","Wallet")">My account</a></h1>

                <!-- Nav -->
                <nav id="nav">
                    <ul>
                        <li><a asp-area="" asp-controller="Wallet" asp-action="SendTransaction">Create transaction</a></li>
                        <li class="break"><a asp-area="" asp-controller="Auth" asp-action="Login">Login/Register</a></li>
                    </ul>
                </nav>

            </div>
            @await RenderSectionAsync("HeaderSection", required: false)
        </div>
        @RenderBody()


        <!-- Footer -->
        <div id="footer-wrapper">
            <div id="footer" class="container">
                <header class="major">
                    <a class="image" href="@Url.Action("Index","Home")"><img src="~/images/cover-peerpay.png" style="width:200px;" class="img-fluid" alt="Aptosnaut" /></a>
                </header>
                <div class="row">
                    <section class="col-6 col-12-narrower">
                        <div class="row">
                            <div class="col-12">
                                <br />
                            </div>

                        </div>
                    </section>
                    <section class="col-6 col-12-narrower">
                        <div class="row">
                            <div class="col-12">
                                Aptosnaut is a producto created by <a href="https://www.techgethr.com" target="_blank">Techgethr</a>. <br />
                                <a href="https://techgethr.com" target="_blank"><img src="~/images/techgethr.png" class="img-fluid" alt="Techgethr" /></a>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <div id="copyright" class="container">
                <ul class="menu">
                    <li>&copy; Aptosnaut - 2025. Created by Techgethr</li>
                </ul>
            </div>
        </div>

    </div>

    <!-- Scripts -->
    <script src="~/js/jquery/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap/bootstrap.bundle.js"></script>

    <script src="~/js/jquery.dropotron.min.js"></script>
    <script src="~/js/browser.min.js"></script>
    <script src="~/js/breakpoints.min.js"></script>
    <script src="~/js/util.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/pageguide/pageguide.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
